<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane fx:id="borderPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxmlapplication.controller.MainViewController">
   <center>
      <Pane BorderPane.alignment="CENTER" />
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Archivo">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#archsalir" text="Salir" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" onAction="#lanzar" text="Lanzar">
               <items>
                  <MenuItem mnemonicParsing="false">
                     <graphic>
                        <ToolBar fx:id="iconos">
                          <items>
                            <Button fx:id="amazon" mnemonicParsing="false" onAction="#pulsamazon">
                                 <graphic>
                                    <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../icons/amazon.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                              <Button fx:id="blog" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#pulsblog">
                                 <graphic>
                                    <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../icons/bing.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                              <Button fx:id="ebay" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#pulsebay">
                                 <graphic>
                                    <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../icons/ebay.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                              <Button fx:id="face" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#pulsface">
                                 <graphic>
                                    <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../icons/facebook.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                              <Button fx:id="goog" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#pulsgoog">
                                 <graphic>
                                    <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../icons/googlePlus.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                          </items>
                        </ToolBar>
                     </graphic>
                  </MenuItem>
               </items></Menu>
          <Menu mnemonicParsing="false" text="Opciones">
            <items>
                  <Menu mnemonicParsing="false" text="Comprar en">
                    <items>
                        <RadioMenuItem mnemonicParsing="false" onAction="#radamaz" text="Amazon">
                           <toggleGroup>
                              <ToggleGroup fx:id="comprar" />
                           </toggleGroup>
                        </RadioMenuItem>
                        <RadioMenuItem mnemonicParsing="false" onAction="#radebay" text="Ebay" toggleGroup="$comprar" />
                    </items>
                  </Menu>
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <Label fx:id="label" BorderPane.alignment="CENTER_LEFT" />
   </bottom>
</BorderPane>
